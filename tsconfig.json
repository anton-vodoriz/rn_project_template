{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "exactOptionalPropertyTypes": true,
    "baseUrl": "src",
    "paths": {
      "@app/*": ["app/*"],
      "@assets/*": ["assets/*"],
      "@entities/*": ["entities/*"],
      "@features/*": ["features/*"],
      "@processes/*": ["processes/*"],
      "@shared/*": ["shared/*"],
      "@widgets/*": ["widgets/*"]
    }
  }
}
